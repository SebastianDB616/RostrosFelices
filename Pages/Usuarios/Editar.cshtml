@page
@model RostrosFelices.Pages.Usuarios.EditarModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Usuario.Id" />

    <div class="form-group">
        <label asp-for="Usuario.NombreCompleto"></label>
        <input asp-for="Usuario.NombreCompleto" class="form-control" />
        <span asp-validation-for="Usuario.NombreCompleto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Contraseña"></label>
        <input asp-for="Usuario.Contraseña" type="password" class="form-control" />
        <span asp-validation-for="Usuario.Contraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.ConfirmarContraseña"></label>
        <input asp-for="Usuario.ConfirmarContraseña" type="password" class="form-control" />
        <span asp-validation-for="Usuario.ConfirmarContraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.TipoSangre"></label>
        <input asp-for="Usuario.TipoSangre" class="form-control" />
        <span asp-validation-for="Usuario.TipoSangre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.CedulaCiudadania"></label>
        <input asp-for="Usuario.CedulaCiudadania" class="form-control" />
        <span asp-validation-for="Usuario.CedulaCiudadania" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.NumeroTelefonico"></label>
        <input asp-for="Usuario.NumeroTelefonico" class="form-control" />
        <span asp-validation-for="Usuario.NumeroTelefonico" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Usuario.CorreoElectronico"></label>
        <input asp-for="Usuario.CorreoElectronico" class="form-control" />
        <span asp-validation-for="Usuario.CorreoElectronico" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<div>
    <a asp-page="Index" class="btn btn-secondary">Volver al listado</a>
</div>