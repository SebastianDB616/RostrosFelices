@page "/Usuarios/Index"
@model RostrosFelices.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<h2>Lista de Usuarios</h2>

<p>
    <a asp-page="Crear">Crear Usuario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Correo Electrónico</th>
            <th>Tipo de Sangre</th>
            <th>Cédula de Ciudadanía</th>
            <th>Número Telefónico</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.Usuarios)
        {
            <tr>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.CorreoElectronico</td>
                <td>@usuario.TipoSangre</td>
                <td>@usuario.CedulaCiudadania</td>
                <td>@usuario.NumeroTelefonico</td>
                <td>
                    <a asp-page="Editar" asp-route-id="@usuario.Id">Editar</a> |
                    <a asp-page="Borrar" asp-route-id="@usuario.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>