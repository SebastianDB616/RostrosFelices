@page "/Servicios/Index"
@model RostrosFelices.Pages.Servicios.IndexModel
@{
    ViewData["Title"] = "Lista de Servicios";
}

<h2>Lista de Servicios</h2>

<p>
    <a asp-page="Crear" class="btn btn-success">Crear Nuevo Servicio</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Fecha de Servicio</th>
            <th>Descripción</th>
            <th>Empleado</th>
            <th>Cliente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model.Servicios)
        {
            <tr>
                <td>@servicio.FechaServicio.ToShortDateString()</td>
                <td>@servicio.DescripcionServicio</td>
                <td>@servicio.NombreEmpleado</td>
                <td>@servicio.Cliente.NombreCompleto</td>
                <td>
                    <a asp-page="Editar" asp-route-id="@servicio.Id">Editar</a> |
                    <a asp-page="Borrar" asp-route-id="@servicio.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>