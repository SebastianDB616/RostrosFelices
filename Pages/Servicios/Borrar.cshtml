@page
@model RostrosFelices.Pages.Servicios.BorrarModel
@{
    ViewData["Title"] = "Borrar Servicio";
}

<h2>Confirmar eliminación</h2>

<h3>¿Estás seguro de que deseas eliminar el siguiente servicio?</h3>

<div>
    <h4>Fecha del Servicio:</h4>
    <p>@Model.Servicio.FechaServicio</p>
    <h4>Descripción:</h4>
    <p>@Model.Servicio.DescripcionServicio</p>
    <h4>Nombre del Empleado:</h4>
    <p>@Model.Servicio.NombreEmpleado</p>
    <h4>Cliente:</h4>
    <p>@Model.Servicio.Cliente.NombreCompleto</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Servicio.Id" />
    <button type="submit" class="btn btn-danger">Confirmar eliminación</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
</form>